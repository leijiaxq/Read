<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.maymeng.read">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_LOGS" />

    <application
        android:name="com.maymeng.read.base.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/TransparencyAppTheme">
        <activity android:name="com.maymeng.read.ui.activity.SplashActivity" android:theme="@style/AppWelcome">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.maymeng.read.ui.activity.MainActivity" android:launchMode="singleTask"/>
        <activity android:name="com.maymeng.read.ui.activity.ZhihuWebViewActivity"/>
        <activity android:name="com.maymeng.read.ui.activity.ImageActivity"/>
        <activity android:name="com.maymeng.read.ui.activity.MoviesListActivity"/>
        <activity android:name="com.maymeng.read.ui.activity.MoviesDetailActivity"/>
        <activity android:name="com.maymeng.read.ui.activity.WebViewActivity"/>
        <activity android:name="com.maymeng.read.ui.activity.BookDetailActivity"/>
    </application>

</manifest>