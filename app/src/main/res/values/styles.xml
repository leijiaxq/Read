<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TransparencyAppTheme" parent="AppTheme">
    </style>

    <style name="AppWelcome" parent="TransparencyAppTheme">
        <item name="android:windowBackground">@drawable/img_transition_default</item>
    </style>

    <style name="line_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/line_gray</item>
        <item name="android:layout_height">1px</item>
    </style>

    <style name="DialogTheme" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@drawable/dialog_background</item>
    </style>

    <style name="pop_bottom_anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_bottom_enter</item>
        <item name="android:windowExitAnimation">@anim/pop_bottom_exit</item>
    </style>
</resources>
